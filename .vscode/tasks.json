{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/WebApp.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "compose",
            "type": "shell",
            "osx": {
                "command": "bash ./scripts/project-tasks.sh compose"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "windows": {
                "command": ".\\scripts\\project-tasks.ps1 -Compose"
            }
        },
        {
            "label": "compose-for-debug",
            "type": "shell",
            "osx": {
                "command": "bash ./scripts/project-tasks.sh composeForDebug"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "windows": {
                "command": ".\\scripts\\project-tasks.ps1 -ComposeForDebug"
            }
        }
    ]
}
